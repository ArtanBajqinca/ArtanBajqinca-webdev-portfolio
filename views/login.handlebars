<div id='main'>
    <div class='login-background-rectangle'>
        <div class='login-container'>
            <div class='login-title lora'>Login</div>
            <img class='login-icon' src='/img/loginIcon.svg' alt='Login Icon' />
            <form class='login-form-container' action='/login' method='post'>
                <div class='input-group'>
                    <input type='text' name='un' id='un' required placeholder='Username' />
                </div>
                <div class='input-group'>
                    <input type='password' name='pw' id='pw' required placeholder='Password' />
                </div>
                <div class='button-container'>
                    <button type='submit' class='login-button'>Login</button>
                </div>
            </form>
        </div>
    </div>
</div>