<div class='project-me-center-container'>

{{#if isAdmin}}
    <div>
        <button><a href="/projects/new">New project</a></button>
    </div>
{{/if}}

{{#if dbError}}
    <div class="error">
        Sorry, there was a problem with the database:
        <br />
        {{theError}}
    </div>
{{else}}
    {{#each projects}}
        <div class="project-container">
            <div class="project-info">
                <div class="p-name">{{pname}}</div>
                <div class="p-year">{{pyear}} - {{ptype}}</div>
            </div>
            <div class="project-image">
                <img src="{{pimgURL}}" alt="{{pimgURL}}" />
            </div>
            {{#if ../isAdmin}}
                <div class="project-actions">
                    <button><a href="/projects/update/{{pid}}">Modify</a></button>
                    <button><a href="/projects/delete/{{pid}}">Delete</a></button>
                </div>
            {{/if}}
        </div>
    {{/each}}
{{/if}}

</div>
<div class='project-me-title lora'>Projects</div>

<div class='project-me-graphic'><img
        src='/img/project-me-graphic.svg'
        alt='background graphic'
    /></div>

